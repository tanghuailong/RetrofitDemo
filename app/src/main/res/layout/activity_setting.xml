<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/sunlogo" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/work_shop_code"
            style="@style/setting_text_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/edittext_line"
            android:textColorHint="@color/desc_text_color"
            android:textColorHighlight="@color/desc_text_color"
            android:hint="请输入车间编号"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/entry_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/work_shop_code"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:text="进入" />
    </RelativeLayout>
</LinearLayout>