<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--全屏的theme-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="status_bar_text">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="status_bar">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">30dp</item>
    </style>
    <style name="stove_item_txt">
        <item name="android:textColor">@color/desc_text_color</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">@drawable/form_border</item>
    </style>
    <style name="stove_item_txt_2">
        <item name="android:textColor">@color/desc_text_color</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="stove_other_txt">
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name="stove_description">
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--圆形进度条-->
    <style name="circle_progress">
        <item name="cpv_autoTextColor">true</item>
        <item name="cpv_autoTextSize">true</item>
        <item name="cpv_barColor">@color/progress_bar_color</item>
        <item name="cpv_barColor1">@color/transition_color_1</item>
        <item name="cpv_barColor2">@color/transition_color_2</item>
        <item name="cpv_barColor3">@color/transition_color_3</item>
        <item name="cpv_barWidth">5dp</item>
        <item name="cpv_innerContourSize">0dp</item>
        <item name="cpv_outerContourSize">0dp</item>
        <item name="cpv_rimColor">@color/progress_bg_color</item>
        <item name="cpv_rimWidth">6dp</item>
        <item name="cpv_showUnit">false</item>
        <!--<item name="cpv_value">80</item>-->
    </style>

    <style name="detail_text_normal">
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="detail_form_text">
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/form_border</item>
    </style>
    <style name="detail_text_emphasiz">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="setting_text_normal">
        <item name="android:textColor">@color/status_bar_txt_color</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="stove_form_normal">
        <item name="android:textColor">@color/desc_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/form_border</item>
    </style>

    <style name="progress_style_yellow">
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#FFC73B</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#FFC73B</item>
        <item name="progress_reached_bar_height">2.5dp</item>
        <item name="progress_unreached_bar_height">1.75dp</item>
    </style>
    <style name="progress_style_red">
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#E74C3C</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#E74C3C</item>
        <item name="progress_reached_bar_height">2.5dp</item>
        <item name="progress_unreached_bar_height">1.75dp</item>
    </style>

</resources>
